#!/usr/bin/env bash

# releases
releases_path=https://api.github.com/repos/JuliaLang/julia/releases
cmd="curl -s"
if [ -n "$OAUTH_TOKEN" ]; then 
    cmd="$cmd -H 'Authorization: token $OAUTH_TOKEN'"
fi
cmd="$cmd $releases_path"

sort_cmd='sort'
if sort --help | grep -q -- '-V'; then
    sort_cmd='sort -V'
fi

# fetch tag names, remove unnecesary chars
versions=$(eval $cmd | grep -oE "tag_name\": *\".{1,15}\"," | 
               sed 's/tag_name\": *\"v//;s/\",//' | $sort_cmd)
echo $versions
